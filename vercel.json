{
    "routes": [
      { "src": "/api/(.*)", "dest": "api.py" },
      { "src": "/(.*)", "dest": "rekognize/index.html" }
    ],
    "build": {
      "backend": {
        "use": "@vercel/python",
        "entrypoint": "api.py",
        "env": {
          "PYTHONUNBUFFERED": "true",
          "WEB_CONCURRENCY": "1"
        }
      },
      "frontend": {
        "use": "@vercel/static-build",
        "entrypoint": "npm run build",
        "outputDirectory": "rekognize/build"
      }
    }
  }